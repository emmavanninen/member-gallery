<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Member Gallery</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/"><img src="/images/simple-logo.png"></a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">What's on</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/gallery">Ensemble</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Theatre</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/gallery">Contact</a>
                </li>
            </ul>
        </div>
        <% include ./partials/login %>
    </nav>

    <section class="wall">
      <!-- include resume -->
      
      <div class="gallery">
        <!-- <div class="card-columns"> -->
            <!-- <div class="card-deck-wrapper"> -->
        <div class="card-deck card-columns">
          <% for (let i of members) {%>
          <div class="card">
            <img class="card-img-top" src="/images/confused-emma.jpg" alt="Card image cap" />
            <div class="card-body">
              <div class="hs">
                <h5 class="card-title"><%= i.profile.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                                
                  <!-- emsp = 4 spaces -->
                  <!-- TODO: get title from resum -->
                  &emsp;<%= i.resume %>

                </h6>
              </div>
            <div class="card-footer"><form class="form-resume" method="GET" action="/users/gallery/<%=  i.id %>">
                <input class="resume-btn" type="submit" value="Resume" />
            </form></div>
            </div>
          </div>
          <% }%>
        </div>
        <!-- </div> -->
        <!-- </div> -->

      </div>
    </section>
    <div>
    </div>
    <% include ./partials/scripts %>
    <link rel="stylesheet" href="/stylesheets/gallery-style.css" />
  </body>
</html>
