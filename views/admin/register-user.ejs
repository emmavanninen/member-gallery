<!doctype html>
<html lang="en">

<body class="text-center">
    <form class="form-signin" method="POST" action="/admin/register-new-member">


        <% for (let i of errors) { %>
        <div class="alert alert-danger">
            <%= i%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
        </div>
        <% } %>

        <% for (let i = 0; i < errorValidate.length; i++) { %>
        <div class="alert alert-danger">
            <%= errorValidate[i].message%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
        </div>
        <% } %>

        <% for (let s of success) { %>
        <div class="alert alert-success">
            <%= s %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
        </div>
        <% } %>


        <h1 class="h3 mb-3 font-weight-normal">Register new member</h1>
        <label for="inputName" class="sr-only">Name</label>
        <input type="text" id="inputName" class="form-control" placeholder="Name" name="name">
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="Email address" name="email">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="Password" name="password">


        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        <a href="/" style="text-decoration: none;"><button class="btn btn-lg btn-primary btn-block" type="button">Back to main</button></a>
        <p class="mt-5 mb-3 text-muted">&copy; 2019</p>
    </form>
    <% include ../partials/scripts %>
</body>

</html>